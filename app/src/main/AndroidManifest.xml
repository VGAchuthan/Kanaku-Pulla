<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.user.sharewith">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="splitNshare"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShareActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".CreateNewActivity" />
        <activity android:name=".CreateNewGroupActivity" />
        <activity android:name=".TransactionInfoActivity" />
        <activity android:name=".TabbedMainActivity" />
        <activity android:name=".TabbedShareActivity" />
        <activity android:name=".HistoryTransactionActivity"></activity>
    </application>

</manifest>